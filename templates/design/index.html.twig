{% extends 'base.html.twig' %}

{% block title %}Hello TrainingController!{% endblock %}

{% block body %}
<div class="h-screen p-4">
  <h1 class="mb-6">Design System</h1>
  <hr class="h-px my-4">
  <h1>This is a title</h1>
  <h2>This is a subtitle</h2>
  <p class="text-base">This is a paragraph</p>
  <a>This is an anchor</a>
  <div class="my-4">
    <button class="btn btn-primary">This is a primary button</button>
  </div>
  <div class="my-4">
    <button class="btn btn-secondary">This is a secondary button</button>
  </div>
  <div class="my-4">
    <button disabled class="btn btn-primary">This is a disabled button</button>
  </div>
  <div>
    <input type="text" placeholder="E-Mail"/>
  </div>
  <div class="mt-4">
    <input type="date" />
  </div>
  <div>
    <input type="checkbox" id="checkbox" />
    <label for "checkbox">Checkbox</label>
  </div>
  <div>
    <select>
      <option>Option 1</option>
      <option>Option 2</option>
    </select>
  </div>
</div>
{% endblock %}
